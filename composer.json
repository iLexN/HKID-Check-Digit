{
    "name": "ilexn/hkid-check-digit",
    "type": "library",
    "description": "HKID digit check",
    "license": "MIT",
    "keywords": [
        "HKID"
    ],
    "authors": [
        {
            "name": "iLexN",
            "email": "ilex.job@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "codedungeon/phpunit-result-printer": "^0.28.0",
        "ilexn/keep-a-change-log": "^1.1",
        "infection/infection": "^0.16.4",
        "phpbench/phpbench": "@dev",
        "phpstan/phpstan": "^0.12.38",
        "phpstan/phpstan-phpunit": "^0.12.16",
        "phpstan/phpstan-strict-rules": "^0.12.4",
        "phpunit/phpunit": "^9.3",
        "rector/rector": "^0.7",
        "spatie/phpunit-watcher": "^1.22",
        "symplify/easy-coding-standard": "^7.3",
        "vimeo/psalm": "^3.12"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Ilex\\Validation\\HkidValidation\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ilex\\Validation\\HkidValidation\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "bug-check": "phpstan analyse -l max src tests",
        "changelog": "@php dev/create-change-log.php",
        "ci": [
            "@ecs",
            "@test"
        ],
        "dev": [
            "@test",
            "@cs-check",
            "@bug-check",
            "@psalm",
            "@rector-check",
            "@benchmark"
        ],
        "cs-check": "ecs check src",
        "cs-fix": "ecs check src --fix",
        "test": "phpunit --testdox",
        "test-coverage": "phpunit --coverage-text",
        "test-test": "vendor/bin/infection --threads=4",
        "test-watch": "phpunit-watcher watch",
        "test-dump": "phpunit --dump-xdebug-filter ./build/xdebug-filter.php",
        "benchmark": "phpbench run benchmarks/HkidBenchmark.php --report=aggregate --retry-threshold=5",
        "rector-check": "rector process src --config rector-ci.yaml --dry-run",
        "rector-fix": "rector process src --config rector-ci.yaml",
        "psalm" : "psalm"
    }
}
