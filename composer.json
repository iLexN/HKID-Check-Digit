{
    "name": "ilexn/hkid-check-digit",
    "description": "HKID digit check",
    "authors": [
        {
            "name": "iLexN",
            "email": "ilex.job@gmail.com"
        }
    ],
    "license": "MIT",
    "require": {
        "php": ">=7.0"
    },
    "autoload": {
        "psr-4": {
            "Ilex\\Validation\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ilex\\Validation\\HkidCheckDigit\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.10",
        "ilexn/keep-a-change-log": "^1.0",
        "phpunit/phpunit": "^6.5",
        "squizlabs/php_codesniffer": "3.1.1"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "ci": [
            "@phpcs",
            "@test"
        ],
        "dev":[
            "@cs-fix",
            "@phpcs",
            "@test-dev"
        ],
        "cs-fix": "php-cs-fixer fix",
        "phpcs": "phpcs",
        "docs" : "@php ./sami.phar update .sami",
        "test-dev" : "phpunit --coverage-text",
        "test": "phpunit"
    },
    "scripts-descriptions": {
        "phpcs": "Checks that the application code conforms to coding standard",
        "test": "Launches the preconfigured PHPUnit"
    }
}
